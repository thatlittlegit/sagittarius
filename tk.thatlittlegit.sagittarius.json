{
    "app-id" : "tk.thatlittlegit.sagittarius",
    "runtime" : "org.gnome.Sdk",
    "runtime-version" : "3.36",
    "sdk" : "org.gnome.Sdk",
    "command" : "sagittarius",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=xdg-data/sagittarius"
    ],
    "build-options" : {
        "cflags" : "-O2 -g",
        "cxxflags" : "-O2 -g",
        "env" : {
            "V" : "1"
        }
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "libdazzle",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/libdazzle.git"
                }
            ]
        },
        {
            "name" : "liburiparser",
            "buildsystem" : "cmake-ninja",
            "config-opts" : [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DURIPARSER_BUILD_TESTS=OFF",
                "-DURIPARSER_BUILD_TOOLS=OFF",
                "-DURIPARSER_BUILD_DOCS=OFF",
                "-DURIPARSER_BUILD_WCHAR_T=OFF"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/uriparser/uriparser.git"
                }
            ]
        },
        {
            "name" : "liburiparser-gobject",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/thatlittlegit/liburiparser-gobject.git"
                }
            ]
        },
        {
            "name" : "gmime",
            "builddir" : true,
            "buildsystem" : "autotools",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/gmime"
                }
            ]
        },
        {
            "name" : "sagittarius",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/thatlittlegit/sagittarius.git"
                }
            ]
        }
    ]
}
