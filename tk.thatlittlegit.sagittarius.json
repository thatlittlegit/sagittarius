{
    "app-id": "tk.thatlittlegit.sagittarius",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.36",
    "sdk": "org.gnome.Sdk",
    "command": "sagittarius",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=xdg-data/sagittarius"
    ],
    "build-options": {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
            "V": "1"
        }
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "libdazzle",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.gnome.org/GNOME/libdazzle/-/archive/3.37.1/libdazzle-3.37.1.tar.bz2",
                    "sha256": "f786a9c3007011a03c721c3402f86ec69642797f64a4bdaa6f1a9c10628aa0cf"
                }
            ]
        },
        {
            "name": "liburiparser",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DURIPARSER_BUILD_TESTS=OFF",
                "-DURIPARSER_BUILD_TOOLS=OFF",
                "-DURIPARSER_BUILD_DOCS=OFF",
                "-DURIPARSER_BUILD_WCHAR_T=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/uriparser/uriparser/releases/download/uriparser-0.9.4/uriparser-0.9.4.tar.xz",
                    "sha256": "c2554f555bb1640aa5d77e574966d203ab073d738366d90ec5ada0055cd05bf7"
                }
            ]
        },
        {
            "name": "liburiparser-gobject",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/thatlittlegit/liburiparser-gobject.git"
                }
            ]
        },
        {
            "name": "gmime",
            "builddir": true,
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/gmime",
                    "commit": "9749a44bae4bacbb59c06d9a62e5e87cb8be3081"
                }
            ]
        },
        {
            "name": "libpeas",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.gnome.org/GNOME/libpeas/-/archive/libpeas-1.26.0/libpeas-libpeas-1.26.0.tar.bz2",
                    "sha256": "04c19476ea30ed581a79519ac983ce76532606501af64d1be52ce13579e59a2d"
                }
            ]
        },
        {
            "name": "sagittarius",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/thatlittlegit/sagittarius.git"
                }
            ]
        }
    ]
}
