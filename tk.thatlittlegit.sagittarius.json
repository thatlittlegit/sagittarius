{
    "app-id": "tk.thatlittlegit.sagittarius",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.38",
    "sdk": "org.gnome.Sdk",
    "command": "sagittarius",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=xdg-data/sagittarius"
    ],
    "build-options": {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
            "V": "1"
        }
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "libdazzle",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.gnome.org/GNOME/libdazzle/-/archive/3.37.1/libdazzle-3.37.1.tar.bz2",
                    "sha256": "f786a9c3007011a03c721c3402f86ec69642797f64a4bdaa6f1a9c10628aa0cf"
                }
            ]
        },
        {
            "name": "liburiparser",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DURIPARSER_BUILD_TESTS=OFF",
                "-DURIPARSER_BUILD_TOOLS=OFF",
                "-DURIPARSER_BUILD_DOCS=OFF",
                "-DURIPARSER_BUILD_WCHAR_T=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/uriparser/uriparser/releases/download/uriparser-0.9.4/uriparser-0.9.4.tar.xz",
                    "sha256": "c2554f555bb1640aa5d77e574966d203ab073d738366d90ec5ada0055cd05bf7"
                }
            ]
        },
        {
            "name": "liburiparser-gobject",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/thatlittlegit/liburiparser-gobject/archive/0.2.0.tar.gz",
                    "sha256": "f95f85fecbe9893552fdd1c5abad142424dc3e273757d99aa27393e9dba9b623"
                }
            ]
        },
        {
            "name": "libpeas",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.gnome.org/GNOME/libpeas/-/archive/libpeas-1.26.0/libpeas-libpeas-1.26.0.tar.bz2",
                    "sha256": "04c19476ea30ed581a79519ac983ce76532606501af64d1be52ce13579e59a2d"
                }
            ]
        },
        {
            "name": "evince",
            "buildsystem": "meson",
            "config-opts": [
                "-Dnautilus=false",
                "-Dthumbnailer=false",
                "-Dpreviewer=false",
                "-Dviewer=false",
                "-Dgtk_doc=false",
                "-Duser_doc=false",
                "-Ddbus=false"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.gnome.org/GNOME/evince/-/archive/3.37.3/evince-3.37.3.tar.bz2",
                    "sha256": "94995a4f3c7f6f0d786747cdec50ee781adb5028ecbe0562c46ea54f88b77ec2"
                }
            ]
        },
        {
            "name": "gnutls",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.gnupg.org/ftp/gcrypt/gnutls/v3.6/gnutls-3.6.14.tar.xz",
                    "sha256": "5630751adec7025b8ef955af4d141d00d252a985769f51b4059e5affa3d39d63"
                }
            ]
        },
        {
            "name": "gtksourceview",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.gnome.org/GNOME/gtksourceview/-/archive/4.7.90/gtksourceview-4.7.90.tar.bz2",
                    "sha256": "9cd43aa6faf76db711e54f3f98801a91e9ac8bd9076b560f06e0136f0c10f701"
                }
            ]
        },
        {
            "name": "sagittarius",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/thatlittlegit/sagittarius.git"
                }
            ]
        }
    ]
}
